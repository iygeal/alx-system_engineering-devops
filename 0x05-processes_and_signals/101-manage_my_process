#!/usr/bin/env bash
# Bash (init) script 101-manage_my_process

# Hardcoded PID_FILE
PID_FILE="/var/run/my_process.pid"

# Check for the argument and call the appropriate logic
if [ "${1}" == "start" ]; then
    # Start manage_my_process in the background
    ./manage_my_process &
	touch /var/run/my_process.pid

    # Capture the PID and store it in the PID_FILE
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
elif [ "${1}" == "stop" ]; then
    echo "manage_my_process stopped"

    # Check if PID_FILE exists and kill the process
    if [ -f "$PID_FILE" ]; then
        pid=$(cat "$PID_FILE")
        kill "$pid"
        rm -f "$PID_FILE"
    fi
elif [ "${1}" == "restart" ]; then
    # Check if PID_FILE exists and kill the process
    if [ -f "$PID_FILE" ]; then
        pid=$(cat "$PID_FILE")
        kill "$pid"
        rm -f "$PID_FILE"
    fi

    # Start manage_my_process in the background
    ./manage_my_process &

    # Capture the PID and store it in the PID_FILE
    echo "$!" > "$PID_FILE"
    echo "manage_my_process restarted"
else
    echo "Usage: 101-manage_my_process {start|stop|restart}"
fi

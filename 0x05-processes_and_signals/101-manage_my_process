#!/usr/bin/env bash
# Bash (init) script 101-manage_my_process

MANAGE_SCRIPT="./manage_my_process"
PID_FILE="/var/run/my_process.pid"

# Check for the argument and call the appropriate logic
if [ "${1}" == "start" ]; then
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
elif [ "${1}" == "stop" ]; then
    echo "manage_my_process stopped"
    [ -f "$PID_FILE" ] && { kill "$(cat "$PID_FILE")" && rm -f "$PID_FILE"; }
elif [ "${1}" == "restart" ]; then
    [ -f "$PID_FILE" ] && { kill "$(cat "$PID_FILE")" && rm -f "$PID_FILE"; }
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process restarted"
else
    echo "Usage: 101-manage_my_process {start|stop|restart}"
fi

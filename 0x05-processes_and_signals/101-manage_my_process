#!/usr/bin/env bash
# Bash (init) script 101-manage_my_process

MANAGE_SCRIPT="./manage_my_process"
PID_FILE="/var/run/my_process.pid"

# Function to start manage_my_process
start_process() {
    if [ -f "$PID_FILE" ]; then
        echo "Error: manage_my_process is already running. Use 'restart' to restart."
        exit 1
    else
        "$MANAGE_SCRIPT" start & echo $! > "$PID_FILE" && echo "manage_my_process started"
    fi
}

# Function to stop manage_my_process
stop_process() {
    if [ -f "$PID_FILE" ]; then
        pid=$(cat "$PID_FILE")
        kill "$pid" && rm -f "$PID_FILE" && echo "manage_my_process stopped"
    else
        echo "No running process found."
    fi
}

# Function to restart manage_my_process
restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

# Check for the argument and call the appropriate function
case "$1" in
    start) start_process ;;
    stop) stop_process ;;
    restart) restart_process ;;
    *) echo "Usage: 101-manage_my_process {start|stop|restart}" ;;
esac

#!/usr/bin/env bash
# Bash (init) script 101-manage_my_process

# Check for the argument and call the appropriate logic
if [ "${1}" == "start" ]; then
    # Start manage_my_process in the background
    ./manage_my_process &

    # Capture the PID and store it in the PID_FILE
    echo "$!" > /var/run/my_process.pid
    echo "manage_my_process started"
elif [ "${1}" == "stop" ]; then
    echo "manage_my_process stopped"

    # Check if PID_FILE exists and kill the process
    if [ -f "/var/run/my_process.pid" ]; then
        pid=$(cat /var/run/my_process.pid)
        kill "$pid"
        rm -f /var/run/my_process.pid
    fi
elif [ "${1}" == "restart" ]; then
    # Check if PID_FILE exists and kill the process
    if [ -f "/var/run/my_process.pid" ]; then
        pid=$(cat /var/run/my_process.pid)
        kill "$pid"
        rm -f /var/run/my_process.pid
    fi

    # Start manage_my_process in the background
    ./manage_my_process &

    # Capture the PID and store it in the PID_FILE
    echo "$!" > /var/run/my_process.pid
    echo "manage_my_process restarted"
else
    echo "Usage: 101-manage_my_process {start|stop|restart}"
fi

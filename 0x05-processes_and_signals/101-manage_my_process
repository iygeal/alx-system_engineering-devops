#!/usr/bin/env bash
# Bash (init) script 101-manage_my_process

# Hardcoded PID_FILE
PID_FILE="/var/run/my_process.pid"

# Check for the argument and call the appropriate logic
if [ "${1}" == "start" ]; then
    # Start manage_my_process in the background
    ./manage_my_process &

    # Capture the PID and store it in the PID_FILE
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
elif [ "${1}" == "stop" ]; then
    echo "manage_my_process stopped"

    # Kill the process using the PID_FILE and remove it
    pid=$(cat "$PID_FILE" 2>/dev/null)
    [ -n "$pid" ] && kill "$pid"
    [ -f "$PID_FILE" ] && rm -f "$PID_FILE"
elif [ "${1}" == "restart" ]; then
    echo "manage_my_process restarted"

    # Kill the process using the PID_FILE and remove it
    pid=$(cat "$PID_FILE" 2>/dev/null)
    [ -n "$pid" ] && kill "$pid"
    [ -f "$PID_FILE" ] && rm -f "$PID_FILE"

    # Start manage_my_process in the background
    ./manage_my_process &

    # Capture the PID and store it in the PID_FILE
    echo "$!" > "$PID_FILE"
else
    echo "Usage: 101-manage_my_process {start|stop|restart}"
fi

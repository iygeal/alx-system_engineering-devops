#!/usr/bin/env bash
# This script installs and configures HAProxy
# to distrubte traffic to two web servers - web-01 and web-02
# using roundrobin algorithm

# Variables for web server IPs
WEB_01_IP="100.26.216.116"
WEB_02_IP="3.84.161.102"

# Install HAProxy
sudo apt-get update -y -qq
sudo apt-get install -y haproxy -qq

# Configure HAProxy
sudo tee /etc/haproxy/haproxy.cfg >/dev/null <<EOF
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    stats uri /haproxy?stats
    default_backend iygeal_backend_servers

backend iygeal_backend_servers
    balance roundrobin
    server web-01 $WEB_01_IP:80 check
    server web-02 $WEB_02_IP:80 check
EOF

# Enable HAProxy Management
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Restart HAProxy
sudo service haproxy restart
